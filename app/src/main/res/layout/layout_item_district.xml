<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_item_district"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_code_district"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_14" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorBlack" />

        <TextView
            android:id="@+id/tv_name_district"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_14" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_district_edit"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:weightSum="2"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_edit_province"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Sửa"
            android:background="@drawable/bg_item_district_edit"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_14" />

<!--        <View-->
<!--            android:layout_width="1dp"-->
<!--            android:layout_height="match_parent"-->
<!--            android:background="@color/colorBlack" />-->

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_delete_province"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Xóa"
            android:background="@drawable/bg_item_district_delete"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_14" />

    </LinearLayout>


</LinearLayout>